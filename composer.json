      "email": "Mahe.BOUMEDIENE@etu.uca.fr"
    }

  ],
  "require": {
    "php": ">=8.3",
    "ext-json": "*",
    "altorouter/altorouter": "2.0.3",
    "ext-pdo": "*",
    "ext-fileinfo": "*"
  },
  "autoload": {
    "psr-4": {
      "Poussinade\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Poussinade\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.1",
    "phpstan/phpstan": "^1.10"
  },
  "scripts": {
    "start-dev": "echo Run: xdg-open http://localhost:8000/login & php -S localhost:8000 -t public",
    "test": "phpunit",
    "phpstan": "phpstan analyse src --level=5",
    "cs-fix": "php-cs-fixer fix --allow-risky=yes --dry-run --diff --verbose",
    "cs-fix-apply": "php-cs-fixer fix"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}