{
  "name": "needletab/web",
  "description": "A web application for Needletab",
  "type": "project",
  "license": [],
  "authors": [
    {
      "name": "Jeanne BERTHELOT",
      "email": "Jeanne.BERTHELOT@etu.uca.fr"
    },
    {
      "name": "Leo TUDURI",
      "email": "Leo.TUDURI@etu.uca.fr"
    },
    {
      "name": "Alix PIGNARD",
      "email": "Alix.PIGNARD@etu.uca.fr"
    },
    {
      "name": "eleonore DE BRITO",
      "email": "eleonore.de_brito@etu.uca.fr"
    },
    {
      "name": "Thomas BOUQUIER",
      "email": "Thomas.BOUQUIER@etu.uca.fr"
    },
    {
      "name": "Guillaume CHAMBAT",
      "email": "Guillaume.CHAMBAT@etu.uca.fr"
    }
  ],
  "require": {
    "php": ">=8.3",
    "ext-json": "*",
    "twig/twig": "^3.21.1",
    "altorouter/altorouter": "2.0.3",
    "ext-pdo": "*",
    "ext-fileinfo": "*"
  },
  "autoload": {
    "psr-4": {
      "Poussinade\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Poussinade\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.1",
    "phpstan/phpstan": "^1.10"
  },
  "scripts": {
    "start-dev": "echo Run: xdg-open http://localhost:8000/login & php -S localhost:8000 -t public",
    "test": "phpunit",
    "phpstan": "phpstan analyse src --level=5",
    "cs-fix": "php-cs-fixer fix --allow-risky=yes --dry-run --diff --verbose",
    "cs-fix-apply": "php-cs-fixer fix",
    "cs-fix-docker-build": "docker build -f Dockerfile.csfixer -t php-cs-fixer:8.3 .",
    "cs-fix-docker": "docker run --rm -v $PWD:/app php-cs-fixer:8.3 fix --allow-risky=yes --dry-run --diff --verbose",
    "cs-fix-docker-apply": "docker run --rm -v $PWD:/app php-cs-fixer:8.3 fix"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
